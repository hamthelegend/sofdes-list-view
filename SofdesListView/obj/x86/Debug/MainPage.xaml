<Page x:ConnectionId='1'
    x:Class="SofdesListView.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SofdesListView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid
            HorizontalAlignment="Stretch"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:ConnectionId='11'
                x:Name="AvailableCoursesComboBox"
                HorizontalAlignment="Stretch"
                Margin="16"
                                                                    
                DisplayMemberPath="Id"
                PlaceholderText="Select a course"/>
            <Button x:ConnectionId='12'
                Content="Select"
                Grid.Column="1"
                Margin="0,0,16,0"
                                            />
        </Grid>
        <ListView x:ConnectionId='2'
            x:Name="SelectedCoursesListView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
                                                                 
            DisplayMemberPath="Id"
            Grid.Column="0"
            Grid.Row="1"
            BorderBrush="LightGray"
            BorderThickness="2"
            Margin="16,0,0,0"/>
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Margin="16,0,16,0">
            <Button x:ConnectionId='6'
                Content="Add"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,4"
                                         />
            <Button x:ConnectionId='7'
                Content="Remove"
                HorizontalAlignment="Stretch"
                Margin="0,4,0,4"
                                            />
            <Button x:ConnectionId='8'
                Content="Add all"
                HorizontalAlignment="Stretch"
                Margin="0,4,0,4"
                                            />
            <Button x:ConnectionId='9'
                Content="Remove all"
                HorizontalAlignment="Stretch"
                Margin="0,4,0,4"
                                               />
            <Button x:ConnectionId='10'
                Content="Submit"
                HorizontalAlignment="Stretch"
                Margin="0,4,0,0"
                                            />
        </StackPanel>
        <ListView x:ConnectionId='3'
            x:Name="AddedCoursesListView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
                                                              
            DisplayMemberPath="Id"
            Grid.Column="2"
            Grid.Row="1"
            BorderBrush="LightGray"
            BorderThickness="2"
            Margin="0,0,16,0"/>
        <controls:DataGrid x:ConnectionId='4'
            x:Name="SubmittedCoursesListView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
                                                   
            Grid.Column="0"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            BorderBrush="LightGray"
            BorderThickness="2"
            Margin="16"/>
        <controls:InAppNotification x:ConnectionId='5'
            x:Name="Notification"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="2"
            VerticalAlignment="Bottom"/>
    </Grid>
</Page>

